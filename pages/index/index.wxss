/* pages/index/index.wxss */
.container-home {
  padding: 20rpx;
  padding-bottom: 150rpx; /* Space for FAB */
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.record-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #eee;
}

.record-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.record-date {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.record-note {
  font-size: 32rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.empty-state {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
}

.fab-btn {
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.4);
}

.plus-icon {
  color: #fff;
  font-size: 60rpx;
  line-height: 1;
  margin-top: -5rpx;
}
